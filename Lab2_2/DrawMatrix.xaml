<Window x:Class="Lab2_2.DrawMatrix"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2_2"
        mc:Ignorable="d"
        Title="DrawMatrix" Height="450" Width="800">
    <Grid Name="DefaultPlace">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <GridSplitter Grid.Column="0" Grid.RowSpan="1" Background="Black" Width="5" HorizontalAlignment="Right" VerticalAlignment="Stretch"></GridSplitter>
        <GridSplitter Grid.Column="1" Grid.RowSpan="1" Background="Black" Width="5" HorizontalAlignment="Left" VerticalAlignment="Stretch"></GridSplitter>
        <GridSplitter Grid.Row="0" Grid.ColumnSpan="1" Background="Black" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Bottom"></GridSplitter>
        <GridSplitter Grid.Row="1" Grid.ColumnSpan="1" Background="Black" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Top"></GridSplitter>
    </Grid>
</Window>
