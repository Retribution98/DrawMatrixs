<Window x:Class="Lab2_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2_2"
        mc:Ignorable="d"
        Title="Matrix" 
        SizeToContent="WidthAndHeight">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Margin="10,10,10,10" VerticalAlignment="Top">
            <Button Content="Создать обычную матрицу" HorizontalAlignment="Left" Margin="5,5,5,5" Padding="10" VerticalAlignment="Top" Click="ButtonAddDefaultMatrix_Click"/>
            <Button Content="Создать разряженную матрицу" HorizontalAlignment="Left" Margin="5,5,5,5" Padding="10" VerticalAlignment="Top" Click="ButtonAddSparseMatrix_Click"/>
            <CheckBox Name="border" Content="Отрисовать границу" HorizontalAlignment="Left" Margin="5,5,5,5" VerticalAlignment="Top" IsChecked="True" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" />
        </StackPanel>
    </Grid>
</Window>
